FROM python:3.12-slim-bullseye

WORKDIR /app

# Copy requirements first for better Docker layer caching
COPY requirements.txt /app/

# Install dependencies
RUN apt-get update && apt-get upgrade -y && pip install --upgrade pip && pip install -r requirements.txt && apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy the model file to the correct location the app expects
# Create the _model directory structure
RUN mkdir -p /app/_model

# Copy application files
COPY app.py /app/
COPY ../../_model/iris_model.pkl /app/_model/

# Alternative: If you want to put the model in /app and update the app.py path
# COPY iris_model.pkl /app/

EXPOSE 80

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "80"]